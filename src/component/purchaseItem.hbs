<div class="row">
    <div class="col-4">
        <p>{{number}}</p>
        <h5>{{status}}</h5>
    </div>
    <div class="col-2">
        {{#with amount}}
        <p>{{title}}</p>
        <h5>{{value}}</h5>
        {{/with}}
    </div>
    <div class="col-4">
        {{#each images}}
        <img src="{{this}}" class="rounded" width="90">
        {{/each}}
    </div>
    <div class="col-2">
        {{#with button}}
        <a href="{{link}}" class="btn {{#if isPrimary}} btn-primary {{/if}} mt-4">{{text}}</a>
        {{/with}}
    </div>
</div>
<hr>