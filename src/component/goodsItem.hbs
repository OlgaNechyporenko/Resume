<div class="col-4 g-2">
    <div class="card">
        <img class="card-img-top" src="{{image}}">
        <div class="card-body">
            <h5 class="card-title">{{title}}
                {{#if isHot}} <span class="badge rounded-pill text-bg-warning text-uppercase">Hot!</span>{{/if}}
                {{#if isNew}} <span class="badge rounded-pill text-bg-primary">Нове</span>{{/if}}
            </h5>
            <p>{{description}}</p>
        </div>
    </div>
</div>