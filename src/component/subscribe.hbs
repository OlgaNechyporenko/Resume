<div class="card text-bg-dark mt-3 mb-3">
    <div class="card-body">
        <h2 class="card-title">{{header}}</h2>
        <p>{{description}}</p>
        <div class="row">
            <div class="col-3">
                {{#each buttons}}
                <a href="{{link}}" class="btn btn-primary mb-1">{{text}}</a>
                {{/each}}
            </div>
        </div>
    </div>
</div>