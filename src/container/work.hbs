{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>

            {{> title data="Work history" big=true}}

            <div>
                <ul>
                    {{#each works}}
                    <li>

                        <div class="mb-2">
                            {{position}}
                        </div>

                        {{!-- <br> --}}
                        <div class="mb-3">
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюю)
                            {{/if}}
                        </div>
                        {{!-- <br> --}}
                        <div class="mb-4">
                            {{#if url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>
                        {{!-- <br>
                        <br> --}}
                        <div class="mb-3">
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>
                        {{!-- <br> --}}
                        <ul class="mb-3">
                            {{#each projects}}
                            <li>
                                <div>
                                    {{> link text=name href=url blank=true noLine=true}}
                                </div>
                                {{!-- <br> --}}
                                <div class="mt-3">
                                    <p>
                                        {{about}}
                                    </p>
                                </div>
                                {{!-- <br> --}}
                                <div>
                                    <em>Project Stacks ({{stackAmount}})</em>
                                </div>
                                {{!-- <br> --}}
                                <div>
                                    <ol>
                                        {{#each stacks}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}

                                    </ol>
                                </div>
                                {{!-- <br> --}}
                                <div class="mt-3">
                                    <em>Project Awards ({{awardAmount}})</em>
                                </div>
                                {{!-- <br> --}}
                                <div>
                                    <ul>
                                        {{#each awards}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}

                                    </ul>
                                </div>
                            </li>
                            {{/each}}
                        </ul>

                    </li>
                    {{!-- <br> --}}
                    {{/each}}
                </ul>
            </div>
        </section>


    </main>
    {{/with}}
</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}